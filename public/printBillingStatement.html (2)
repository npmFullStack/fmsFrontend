<script>
    // Parse URL parameters and populate the template
    function populateTemplate() {
        const urlParams = new URLSearchParams(window.location.search);
        const dataParam = urlParams.get('data');
        
        if (dataParam) {
            try {
                const data = JSON.parse(decodeURIComponent(dataParam));
                
                // Determine mode based on mode_of_service
                let mode = 'PORT TO PORT';
                if (data.mode && data.mode.toLowerCase().includes('door')) {
                    mode = 'DOOR TO DOOR';
                }
                
                // Populate all template elements
                document.getElementById('hwb-number').textContent = data.hwbNumber || '-';
                document.getElementById('date').textContent = new Date().toLocaleDateString();
                document.getElementById('customer').textContent = data.customerName || '-';
                document.getElementById('qty').textContent = data.totalItems || '-';
                document.getElementById('amount').textContent = formatCurrency(data.totalAmount);
                document.getElementById('total').textContent = formatCurrency(data.totalAmount);
                document.getElementById('mode').textContent = mode;
                document.getElementById('hwb-detail').textContent = data.hwbNumber || '-';
                
                // Container info
                const containerInfo = data.containerInfo || '1 x 20FT';
                const vanNumber = data.vanNumber ? ` ${data.vanNumber}` : '';
                document.getElementById('container-info').textContent = containerInfo + vanNumber;
                document.getElementById('container-desc').textContent = containerInfo + vanNumber;
                
                document.getElementById('commodity').textContent = data.commodity || 'General Cargo';
                document.getElementById('route').textContent = data.route || '-';
                
                // Auto-print after a short delay
                setTimeout(() => {
                    window.print();
                }, 1000);
                
            } catch (error) {
                console.error('Error parsing data:', error);
                document.body.innerHTML = '<div style="text-align: center; padding: 50px;">Error loading billing statement data</div>';
            }
        } else {
            document.body.innerHTML = '<div style="text-align: center; padding: 50px;">No data provided for billing statement</div>';
        }
    }
    
    function formatCurrency(amount) {
        if (!amount) return '0.00';
        return new Intl.NumberFormat('en-US', {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2
        }).format(amount);
    }
    
    // Populate template when page loads
    document.addEventListener('DOMContentLoaded', populateTemplate);
    
    // Close window after printing (optional)
    window.onafterprint = function() {
        setTimeout(() => {
            window.close();
        }, 500);
    };
</script>
